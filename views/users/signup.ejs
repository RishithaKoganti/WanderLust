<% layout('layouts/boilerplate') %>

<h3 class="mb-4">Sign up on WanderLust</h3>

<form method="POST" action="/signup" class="needs-validation" novalidate>
  <div class="mb-3">
    <label for="email" class="form-label">Email</label>
    <input name="email" id="email" type="email" class="form-control" placeholder="Enter email" required>
  </div>

  <div class="mb-3">
    <label for="username" class="form-label">Username</label>
    <input name="username" id="username" type="text" class="form-control" placeholder="Enter username" required>
  </div>

  <div class="mb-3">
    <label for="password" class="form-label">Password</label>
    <input name="password" id="password" type="password" class="form-control" placeholder="Enter password" required minlength="6">
  </div>

  <button type="submit" class="btn btn-main">Signup</button>
</form>
