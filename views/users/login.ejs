<% layout('layouts/boilerplate') %>

<h3 class="mb-4">Login on WanderLust</h3>

<form method="POST" action="/login" class="needs-validation" novalidate>

  <div class="mb-3">
    <label for="username" class="form-label">Username</label>
    <input name="username" id="username" type="text" class="form-control" placeholder="Enter username" required>
  </div>

  <div class="mb-3">
    <label for="password" class="form-label">Password</label>
    <input name="password" id="password" type="password" class="form-control" placeholder="Enter password" required minlength="6">
  </div>

  <button type="submit" class="btn btn-main">Login</button>
</form>
